{
  "workspaces": [
    "ui-services/*",
    "backend-services/*",
    "ui-shell"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "prettier": "3.6.2"
  },
  "scripts": {
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint:ui": "eslint --recursive 'ui-services/**/*.{ts,tsx}'",
    "lint:backend": "eslint --recursive 'backend-services/**/*.{ts,tsx}'",
    "lint:ui-shell": "eslint 'ui-shell/**/*.{ts,tsx}'",
    "lint": "npm run lint:ui && npm run lint:backend && npm run lint:ui-shell"
  }
}
